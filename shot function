def shots():
    shots = {}
    strokes = []
    options = ['green', 'fairway', 'rough', 'hazard', 'heavy stuff']
    total = 0
    while True:
        print('\n\nHitting shot...\n')
        try:
            result = int(input('''\nFor shot result enter...\n \n1 for green
        \n2 for fairway
        \n3 for rough
        \n4 for hazard
        \n5 for heavy stuff
        \n6 to remove last shot\n'''))
        except ValueError:
            print('\n***Please enter a number 1-5***')
            result = int(input('''\nFor shot result enter...\n \n1 for green
        \n2 for fairway
        \n3 for rough
        \n4 for hazard
        \n5 for heavy stuff
        \n6 to remove last shot\n'''))
        finally:
            if result in range(1, 6):
                lie = options[result-1]
                print(f'You hit the {lie}\n'.format(lie))
                club = input('Which club did you hit? ')
                distance = input(f'How far did your {club} go? '.format(club))
                if result == 1:
                    shots[club] = [distance, lie, 1]
                    strokes.append(1)
                    break
                elif result == 2:
                    stroke = 1
                elif result == 3:
                    stroke = 1
                elif result == 4:
                    stroke = 2
                elif result == 5:
                    stroke = 1
                shots[club] = [distance, lie, stroke]
                strokes.append(stroke)
            elif result == 6:
                removed_shot = shots.popitem()
                removed_strokes = strokes.pop()
                print(f'Removing previous shot: {removed_shot} and score: {removed_strokes}'.format(removed_shot, removed_strokes))
            else:
                print('\n***Please enter a number 1-5***')

    putts = int(input('How many putts did you have? '))
    shots['putter'] = putts
    strokes.append(putts)
    for i in strokes:
        total += i
    
    return print(f'Your score was: {total}\n'.format(total), shots)

shots()
