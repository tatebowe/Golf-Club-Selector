def shots():
    shots = {}
    score = 0
    choices = range(1, 6)
    while True:
        print('Result?')
        try:
            result = int(input('''Enter... \n1 for green
        \n2 for fairway
        \n3 for rough
        \n4 for hazard
        \n5 for heavy stuff\n'''))
        except ValueError:
            print('Please enter a number 1-5')

        if result in choices:
            club = input('Which club did you hit? ')
            distance = input(f'How far did {club} go? '.format(club))
            shots[club] = distance
            if result == 1:
                score += 1
                break
            elif result == 2:
                score += 1
            elif result == 3:
                score += 1
            elif result == 4:
                score += 2
            elif result == 5:
                score += 1

    putts = int(input('How many putts did you have? '))
    shots['putter'] = putts
    score += putts
 
    return print(f'Your score was: {score}'.format(score), shots)


shots()
